@model BudgetPlanner.DataAccess.Models.Purchase
<h2>Edit Purchase</h2>
<div class="form-horizontal">
    <form method="post">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="BudgetID" />
        <input type="hidden" asp-for="Budget" />
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date"></span>
        </div>
        <p>
            <button type="submit" class="btn btn-primary" role="button">Save</button>
            <a asp-controller="account" asp-action="UserView" class="btn btn-primary" role="button">Cancel</a>
        </p>
    </form>
</div>