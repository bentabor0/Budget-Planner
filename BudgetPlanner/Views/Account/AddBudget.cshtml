@model BudgetPlanner.DataAccess.Models.BudgetModel
<h2>Add Budget</h2>
<div class="form-horizontal">
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Give your Budget a Name!</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="BudgetGoal">BudgetGoal: Add Your amount of money for the budget.</label>
            <input asp-for="BudgetGoal" class="form-control" />
            <span asp-validation-for="BudgetGoal"></span>
        </div>
        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
            <a asp-controller="account" asp-action="UserView" class="btn btn-primary" role="button">Cancel</a>
        </p>
    </form>
</div>